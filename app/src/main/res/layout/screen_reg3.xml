<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:background="@drawable/grey_back">

    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:tint="@color/black"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/slide15item"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ваш аватар: для ФЛП и юр лиц- Ваш логотип, для физ лиц-
актуальная фотография исполнителя."
                android:textColor="@color/black"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/addImage"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:src="@drawable/slide14item"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:background="@drawable/rounded_yellow"
        android:gravity="center"
        android:text="далее"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17sp" />
</LinearLayout>