<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:background="@drawable/grey_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/content_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/cart">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20sp">

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/ic_card"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="добавить карту"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="удалить карту"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <com.sembozdemir.viewpagerarrowindicator.library.ViewPagerArrowIndicator
                android:id="@+id/viewPagerArrowIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/left_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    app:drawableStartCompat="@drawable/ic_left" />

                <com.example.sliderviewlibrary.SliderView
                    android:id="@+id/sliderView"
                    android:layout_width="310dp"
                    android:layout_height="199dp"
                    android:layout_alignBottom="@+id/viewPagerArrowIndicator"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/right_nav"
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@+id/viewPagerArrowIndicator"
                    android:layout_height="wrap_content"
                    app:drawableEndCompat="@drawable/ic_right"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_right" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabDots"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/main"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

            </com.sembozdemir.viewpagerarrowindicator.library.ViewPagerArrowIndicator>



        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>