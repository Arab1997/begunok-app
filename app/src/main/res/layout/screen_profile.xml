<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/screenStyle"
    android:background="@drawable/grey_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/content_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Адрес эл. почты"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_white"
                android:clickable="false"
                android:drawableEnd="@drawable/edit"
                android:focusable="false"
                android:hint="pr.lorem@ipsum.com"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="14sp"
                android:translationZ="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Номер телефона"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_white"
                android:clickable="false"
                android:drawableEnd="@drawable/edit"
                android:focusable="false"
                android:hint="+38 093 00 65 43"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="14sp"
                android:translationZ="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Платежные карты"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_white"
                android:clickable="false"
                android:drawableEnd="@drawable/edit"
                android:focusable="false"
                android:hint="1234  5678  9101  2345"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="14sp"
                android:translationZ="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Включить уведомления"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/support"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24_gray"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Написать нам"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rules"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24_gray"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Правила сервиса"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Выйти"
                android:textColor="@color/red"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>