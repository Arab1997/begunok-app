<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_back"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="?actionBarSize"
    android:paddingEnd="30dp">

    <TextView
        style="@style/blackTxtStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:text="Имя"
        android:textSize="13sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_edit_text_white"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="2"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/blackTxtStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Адрес электронной почты"
        android:textSize="13sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_edit_text_white"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/blackTxtStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="Телефон"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:text="+ 38" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edit_text_white"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            app:allowed_chars="1234567890"
            app:keep_hint="true"
            app:mask="(###) ###-##-##"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <TextView
        style="@style/blackTxtStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="Пароль"
        android:textSize="13sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_edit_text_white"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/blackTxtStyle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="Повторите пароль"
        android:textSize="13sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resPassLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/resPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_edit_text_white"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/next"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_gravity="end"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/ic_next"
        tools:ignore="ContentDescription" />

</LinearLayout>